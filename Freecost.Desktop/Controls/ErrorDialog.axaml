<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="Freecost.Desktop.Controls.ErrorDialog"
        x:CompileBindings="False"
        Title="Error"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="White"
        CanResize="False">

    <Grid RowDefinitions="Auto,*,Auto" Margin="0">

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#FFEBEE"
                Padding="24,20">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <TextBlock Text="âŒ"
                           FontSize="32"
                           VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#C62828"/>
                    <TextBlock Text="An error occurred"
                               FontSize="14"
                               Foreground="#666"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      MaxHeight="300"
                      Padding="24">
            <StackPanel Spacing="16">
                <!-- Error Message -->
                <Border Background="#F5F5F5"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <TextBlock Text="{Binding Message}"
                               FontSize="14"
                               Foreground="#2D2D2D"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                </Border>

                <!-- Suggested Actions -->
                <StackPanel IsVisible="{Binding !!SuggestedActions.Count}"
                            Spacing="12">
                    <TextBlock Text="ðŸ’¡ Suggested Actions:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#666"/>

                    <ItemsControl ItemsSource="{Binding SuggestedActions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        BorderBrush="#7AB51D"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <TextBlock Text="{Binding}"
                                               FontSize="13"
                                               Foreground="#2D2D2D"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Technical Details (Expandable) -->
                <Expander IsVisible="{Binding !!TechnicalDetails}"
                          Header="Technical Details"
                          IsExpanded="False">
                    <Border Background="#FAFAFA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,8,0,0">
                        <TextBlock Text="{Binding TechnicalDetails}"
                                   FontSize="11"
                                   FontFamily="Consolas"
                                   Foreground="#666"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="#F9F9F9"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12">
                <Button Content="Copy Error"
                        Click="OnCopyError"
                        Background="Transparent"
                        Foreground="#666"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="16,8"
                        CornerRadius="4"/>
                <Button Content="OK"
                        Click="OnOkClicked"
                        Background="#7AB51D"
                        Foreground="White"
                        Padding="24,8"
                        CornerRadius="4"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
