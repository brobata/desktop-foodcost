<!-- Location: Freecost.Desktop/Controls/PhotoUploadControl.axaml -->
<!-- Action: CREATE NEW FILE -->

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Freecost.Desktop.Controls.PhotoUploadControl"
             DragDrop.AllowDrop="True">

	<Grid RowDefinitions="Auto,*">

		<!-- Header -->
		<TextBlock Grid.Row="0"
		          Text="Entree Photo *"
		          FontWeight="SemiBold"
		          FontSize="14"
		          Foreground="#2D2D2D"
		          Margin="0,0,0,8"/>

		<!-- Photo Area -->
		<Border Grid.Row="1"
		       BorderBrush="#D0D0D0"
		       BorderThickness="2"
		       CornerRadius="8"
		       Height="250"
		       Background="White">

			<Grid>
				<!-- Drop Zone (shown when no photo) -->
				<Border Name="DropZone"
				       Background="#FAFAFA"
				       IsVisible="True">
					<StackPanel VerticalAlignment="Center"
					           HorizontalAlignment="Center"
					           Spacing="12">
						<TextBlock Text="ðŸ“·"
						          FontSize="48"
						          HorizontalAlignment="Center"
						          Opacity="0.5"/>
						<TextBlock Text="Drag and drop photo here"
						          FontSize="14"
						          HorizontalAlignment="Center"
						          Foreground="#666"/>
						<TextBlock Text="or"
						          FontSize="12"
						          HorizontalAlignment="Center"
						          Foreground="#999"/>
						<Button Content="Browse for Photo"
						       Click="OnBrowseClick"
						       Background="#7AB51D"
						       Foreground="White"
						       Padding="16,8"
						       CornerRadius="4"
						       FontWeight="SemiBold"
						       HorizontalAlignment="Center"/>
						<TextBlock Text="Accepts: JPG, PNG"
						          FontSize="11"
						          HorizontalAlignment="Center"
						          Foreground="#999"
						          Margin="0,4,0,0"/>
					</StackPanel>
				</Border>

				<!-- Preview Image (shown when photo exists) -->
				<Image Name="PreviewImage"
				      IsVisible="False"
				      Stretch="Uniform"
				      StretchDirection="DownOnly"
				      Margin="8"/>

				<!-- Remove Button (overlay on preview) -->
				<Button Name="RemoveButton"
				       Content="ðŸ—‘ï¸ Remove"
				       Click="OnRemoveClick"
				       IsVisible="False"
				       Background="#C62828"
				       Foreground="White"
				       Padding="12,6"
				       CornerRadius="4"
				       FontWeight="SemiBold"
				       HorizontalAlignment="Right"
				       VerticalAlignment="Top"
				       Margin="8"
				       ToolTip.Tip="Remove photo">
					<Button.Styles>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#B71C1C"/>
						</Style>
					</Button.Styles>
				</Button>
			</Grid>

		</Border>
	</Grid>

</UserControl>