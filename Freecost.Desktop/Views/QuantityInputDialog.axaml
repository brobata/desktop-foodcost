<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Freecost.Desktop.ViewModels"
        x:Class="Freecost.Desktop.Views.QuantityInputDialog"
        x:DataType="vm:QuantityInputDialogViewModel"
        Title="Enter Quantity"
        Width="400" Height="250"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
	<Grid Margin="20" RowDefinitions="Auto,*,Auto">
		<!-- Title -->
		<TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

		<!-- Input Fields -->
		<StackPanel Grid.Row="1" Spacing="15">
			<StackPanel>
				<TextBlock Text="Quantity" Margin="0,0,0,5"/>
				<TextBox Name="QuantityTextBox"
                         Text="{Binding Quantity}"
                         Watermark="Enter quantity"
                         Width="200"
                         HorizontalAlignment="Left"/>
			</StackPanel>

			<StackPanel>
				<TextBlock Text="Unit" Margin="0,0,0,5"/>
				<ComboBox Name="UnitComboBox"
                          ItemsSource="{Binding Units}"
                          SelectedItem="{Binding SelectedUnit}"
                          Width="200"
                          HorizontalAlignment="Left"/>
			</StackPanel>
		</StackPanel>

		<!-- Buttons -->
		<StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
			<Button Content="Cancel"
                    Width="80"
                    Click="OnCancel"/>
			<Button Content="OK"
                    Width="80"
                    Classes="Primary"
                    Click="OnOk"/>
		</StackPanel>
	</Grid>
</Window>