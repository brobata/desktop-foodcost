<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Freecost.Desktop.Views.BugReportWindow"
        Title="Report a Bug"
        Width="650"
        Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#F5F5F5">

    <ScrollViewer>
        <Border Padding="24">
            <StackPanel Spacing="20">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Report a Bug ðŸ›"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="#2D2D2D"/>
                <TextBlock Text="Help us improve Freecost! Your feedback is valuable and helps make the app better for everyone."
                          FontSize="14"
                          Foreground="#666"
                          TextWrapping="Wrap"/>
            </StackPanel>

            <!-- What were you doing? -->
            <StackPanel Spacing="8">
                <TextBlock Text="What were you trying to do? *"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#2D2D2D"/>
                <TextBox Name="WhatDoingTextBox"
                        Watermark="Example: I was trying to add a new recipe when the app froze..."
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MinHeight="120"
                        Padding="12"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"/>
            </StackPanel>

            <!-- Additional notes -->
            <StackPanel Spacing="8">
                <TextBlock Text="Additional details (optional)"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="#2D2D2D"/>
                <TextBox Name="AdditionalNotesTextBox"
                        Watermark="Any other information that might help (steps to reproduce, what you expected to happen, etc.)..."
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MinHeight="100"
                        Padding="12"
                        Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"/>
            </StackPanel>

            <!-- Info box -->
            <Border Background="#E3F2FD"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="6">
                    <TextBlock Text="â„¹ï¸ What we collect:"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#1976D2"/>
                    <TextBlock Text="â€¢ Your description and notes above"
                              FontSize="12"
                              Foreground="#555"
                              Margin="0,4,0,0"/>
                    <TextBlock Text="â€¢ App version, build number, and system information"
                              FontSize="12"
                              Foreground="#555"/>
                    <TextBlock Text="â€¢ Basic usage statistics (# of recipes, ingredients, etc.)"
                              FontSize="12"
                              Foreground="#555"/>
                    <TextBlock Text="â€¢ Your email address (so we can follow up if needed)"
                              FontSize="12"
                              Foreground="#555"/>
                    <TextBlock Text="â€¢ No recipe data, prices, or customer information"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="#1976D2"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Right"
                       Spacing="12"
                       Margin="0,8,0,0">
                <Button Content="Cancel"
                       Name="CancelButton"
                       Click="OnCancelClick"
                       Padding="20,10"
                       Background="#E0E0E0"
                       Foreground="#2D2D2D"/>
                <Button Content="Submit Bug Report"
                       Name="SubmitButton"
                       Click="OnSubmitClick"
                       Padding="20,10"
                       Background="#7AB51D"
                       Foreground="White"
                       FontWeight="SemiBold"/>
            </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
