<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Dfc.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
             x:Class="Dfc.Desktop.Views.HelpView"
             x:DataType="vm:HelpViewModel">

    <ScrollViewer>
        <StackPanel Margin="32" Spacing="32">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="â“ Help &amp; Tutorial"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2D2D2D"/>
                <TextBlock Text="Learn how to use Desktop Food Cost effectively"
                           FontSize="16"
                           Foreground="#666"/>
            </StackPanel>

            <!-- Tutorial Modules Section -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #10000000">
                <StackPanel Spacing="20">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸŽ“ Tutorial Modules"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#2D2D2D"/>
                        <TextBlock Text="Learn at your own pace with bite-sized tutorials. Pick any module to start!"
                                   FontSize="14"
                                   Foreground="#666"/>
                    </StackPanel>

                    <!-- Module Grid: 3 columns x 2 rows = 6 modules -->
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto"
                          ColumnSpacing="16" RowSpacing="16">

                        <!-- Module 1: Getting Started (Quick Start) -->
                        <Border Grid.Column="0" Grid.Row="0"
                                Background="#F0F8E8"
                                BorderBrush="#7AB51D"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="ðŸš€" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding GettingStartedStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Quick Start"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Essential basics to get started"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="5 steps â€¢ ~5 min"
                                           FontSize="11"
                                           Foreground="#7AB51D"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="getting-started"
                                        HorizontalAlignment="Stretch"
                                        Background="#7AB51D"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>

                        <!-- Module 2: Managing Ingredients -->
                        <Border Grid.Column="1" Grid.Row="0"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="ðŸ“¦" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding IngredientsStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Ingredients"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Track and manage your ingredients"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="8 steps â€¢ ~8 min"
                                           FontSize="11"
                                           Foreground="#999"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="ingredients"
                                        HorizontalAlignment="Stretch"
                                        Background="#E0E0E0"
                                        Foreground="#666"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>

                        <!-- Module 3: Creating Recipes -->
                        <Border Grid.Column="2" Grid.Row="0"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="ðŸ³" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding RecipesStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Recipes"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Build and cost your recipes"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="7 steps â€¢ ~7 min"
                                           FontSize="11"
                                           Foreground="#999"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="recipes"
                                        HorizontalAlignment="Stretch"
                                        Background="#E0E0E0"
                                        Foreground="#666"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>

                        <!-- Module 4: Building Menu Items -->
                        <Border Grid.Column="0" Grid.Row="1"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="ðŸ½ï¸" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding EntreesStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Menu Items"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Create profitable menu items"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="6 steps â€¢ ~6 min"
                                           FontSize="11"
                                           Foreground="#999"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="entrees"
                                        HorizontalAlignment="Stretch"
                                        Background="#E0E0E0"
                                        Foreground="#666"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>

                        <!-- Module 5: Dashboard & Analytics -->
                        <Border Grid.Column="1" Grid.Row="1"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding DashboardStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Analytics"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Understand trends and insights"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="5 steps â€¢ ~5 min"
                                           FontSize="11"
                                           Foreground="#999"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="dashboard"
                                        HorizontalAlignment="Stretch"
                                        Background="#E0E0E0"
                                        Foreground="#666"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>

                        <!-- Module 6: Advanced Features -->
                        <Border Grid.Column="2" Grid.Row="1"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock Text="âš¡" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding AdvancedStatus}"
                                               FontSize="20"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-5,0,0"/>
                                </Grid>
                                <TextBlock Text="Advanced"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D2D2D"
                                           TextAlignment="Center"/>
                                <TextBlock Text="Power user features and tips"
                                           FontSize="12"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                                <TextBlock Text="6 steps â€¢ ~6 min"
                                           FontSize="11"
                                           Foreground="#999"
                                           TextAlignment="Center"/>
                                <Button Content="Start"
                                        Command="{Binding StartTutorialCommand}"
                                        CommandParameter="advanced"
                                        HorizontalAlignment="Stretch"
                                        Background="#E0E0E0"
                                        Foreground="#666"
                                        FontWeight="SemiBold"
                                        Padding="8,6"
                                        CornerRadius="4"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Keyboard Shortcuts Card -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 4 16 0 #10000000"
                    Cursor="Hand">
                <Button Classes="help-card"
                        Command="{Binding ShowKeyboardShortcutsCommand}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Spacing="16">
                        <TextBlock Text="âŒ¨ï¸"
                                   FontSize="48"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Keyboard Shortcuts"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2D2D2D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Master productivity with hotkeys"
                                   FontSize="14"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Quick Reference Guide -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #10000000">
                <StackPanel Spacing="20">
                    <TextBlock Text="âš¡ Quick Reference"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2D2D2D"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                        <!-- Common Tasks -->
                        <StackPanel Grid.Column="0" Spacing="16">
                            <TextBlock Text="Common Tasks"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#666"/>

                            <StackPanel Spacing="12">
                                <Border Background="#F9F9F9"
                                        CornerRadius="8"
                                        Padding="16">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Add Ingredient"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2D2D2D"/>
                                        <TextBlock Text="Ingredients â†’ âž• Add Ingredient â†’ Enter details â†’ Save"
                                                   FontSize="13"
                                                   Foreground="#666"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#F9F9F9"
                                        CornerRadius="8"
                                        Padding="16">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Create Recipe"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2D2D2D"/>
                                        <TextBlock Text="Recipes â†’ âž• Add Recipe â†’ Add ingredients â†’ Enter instructions â†’ Save"
                                                   FontSize="13"
                                                   Foreground="#666"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#F9F9F9"
                                        CornerRadius="8"
                                        Padding="16">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="View Cost Trends"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2D2D2D"/>
                                        <TextBlock Text="Select ingredient â†’ View price history chart"
                                                   FontSize="13"
                                                   Foreground="#666"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Keyboard Shortcuts Preview -->
                        <StackPanel Grid.Column="1" Spacing="16">
                            <TextBlock Text="Essential Shortcuts"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#666"/>

                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="120,*">
                                    <Border Grid.Column="0"
                                            Background="#7AB51D"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="Ctrl+K"
                                                   FontFamily="Consolas"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                               Text="Global Search"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </Grid>

                                <Grid ColumnDefinitions="120,*">
                                    <Border Grid.Column="0"
                                            Background="#7AB51D"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="F1 or Ctrl+?"
                                                   FontFamily="Consolas"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                               Text="Keyboard Shortcuts"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </Grid>

                                <Grid ColumnDefinitions="120,*">
                                    <Border Grid.Column="0"
                                            Background="#7AB51D"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="Ctrl+N"
                                                   FontFamily="Consolas"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                               Text="Create New Item"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </Grid>

                                <Grid ColumnDefinitions="120,*">
                                    <Border Grid.Column="0"
                                            Background="#7AB51D"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="Ctrl+1-6"
                                                   FontFamily="Consolas"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                               Text="Navigate to Views"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

    <UserControl.Styles>
        <Style Selector="Button.help-card">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Styles>
</UserControl>
