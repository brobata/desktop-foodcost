<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Dfc.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Dfc.Desktop.Views.InventoryDashboardView"
             x:DataType="vm:InventoryDashboardViewModel">

    <ScrollViewer>
        <StackPanel Margin="32" Spacing="24">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="ðŸ“¦ Inventory Dashboard"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2D2D2D"/>
                <TextBlock Text="Monitor ingredient costs, usage, and alerts"
                           FontSize="16"
                           Foreground="#666"/>
            </StackPanel>

            <!-- Summary Cards -->
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="16">
                <!-- Total Ingredients -->
                <Border Grid.Column="0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20"
                        BoxShadow="0 2 8 0 #10000000">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸ¥•"
                                   FontSize="32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalIngredients}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#7AB51D"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Ingredients"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Price Increases -->
                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20"
                        BoxShadow="0 2 8 0 #10000000">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸ“ˆ"
                                   FontSize="32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PriceIncreasesCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#F44336"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Price Increases (30d)"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Price Decreases -->
                <Border Grid.Column="2"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20"
                        BoxShadow="0 2 8 0 #10000000">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸ“‰"
                                   FontSize="32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding PriceDecreasesCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Price Decreases (30d)"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Volatile Prices -->
                <Border Grid.Column="3"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20"
                        BoxShadow="0 2 8 0 #10000000">
                    <StackPanel Spacing="8">
                        <TextBlock Text="âš ï¸"
                                   FontSize="32"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding VolatilePricesCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Volatile Prices"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Alerts Section -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #10000000">
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸš¨ Active Alerts"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D2D2D"/>

                    <ItemsControl ItemsSource="{Binding Alerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding BackgroundColor}"
                                        BorderBrush="{Binding BorderColor}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Icon}"
                                                   FontSize="24"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,16,0"/>
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#2D2D2D"/>
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="14"
                                                       Foreground="#666"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <Button Grid.Column="2"
                                                Content="View Details"
                                                Command="{Binding $parent[UserControl].((vm:InventoryDashboardViewModel)DataContext).ViewAlertDetailsCommand}"
                                                CommandParameter="{Binding}"
                                                Background="#7AB51D"
                                                Foreground="White"
                                                Padding="12,6"
                                                CornerRadius="4"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No alerts message -->
                    <StackPanel IsVisible="{Binding !HasAlerts}"
                                Spacing="8"
                                HorizontalAlignment="Center"
                                Margin="0,20">
                        <TextBlock Text="âœ…"
                                   FontSize="48"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No active alerts"
                                   FontSize="16"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="All ingredients are within normal parameters"
                                   FontSize="14"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Top Cost Contributors -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    BoxShadow="0 2 8 0 #10000000">
                <StackPanel Spacing="16">
                    <TextBlock Text="ðŸ’° Top Cost Contributors"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D2D2D"/>

                    <ItemsControl ItemsSource="{Binding TopCostIngredients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F9F9F9"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,0,8">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Rank}"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#7AB51D"
                                                   VerticalAlignment="Center"
                                                   Width="40"/>
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2D2D2D"/>
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="12"
                                                       Foreground="#999"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding PriceDisplay}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#2D2D2D"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
