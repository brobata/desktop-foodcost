<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="Dfc.Desktop.Views.KeyboardShortcutsHelpWindow"
        Title="Keyboard Shortcuts"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="White"
        Icon="/Assets/Images/appicon.png">

	<Grid RowDefinitions="Auto,*,Auto" Margin="24">

		<!-- Header -->
		<StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
			<TextBlock Text="âŒ¨ï¸ Keyboard Shortcuts"
			          FontSize="24"
			          FontWeight="Bold"
			          Foreground="#2D2D2D"/>
			<TextBlock Text="Quick reference for all available keyboard shortcuts"
			          FontSize="14"
			          Foreground="#666"/>
		</StackPanel>

		<!-- Shortcuts List -->
		<ScrollViewer Grid.Row="1">
			<StackPanel Spacing="24">

				<!-- Navigation Shortcuts -->
				<Border Background="White"
				        CornerRadius="8"
				        Padding="16"
				        BoxShadow="0 2 8 0 #10000000">
					<StackPanel Spacing="12">
						<TextBlock Text="Navigation"
						          FontSize="16"
						          FontWeight="Bold"
						          Foreground="#2D2D2D"/>

						<Grid ColumnDefinitions="2*,3*" Margin="0,8,0,0">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + K"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Global search"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + F"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Focus search box"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="F1 or Ctrl+?"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Show keyboard shortcuts"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + 1-8"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Navigate to view (1=Dashboard, 2=Ingredients, etc.)"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"
							          TextWrapping="Wrap"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="F5"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Refresh current view"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- General Shortcuts -->
				<Border Background="White"
				        CornerRadius="8"
				        Padding="16"
				        BoxShadow="0 2 8 0 #10000000">
					<StackPanel Spacing="12">
						<TextBlock Text="General"
						          FontSize="16"
						          FontWeight="Bold"
						          Foreground="#2D2D2D"/>

						<Grid ColumnDefinitions="2*,3*" Margin="0,8,0,0">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + N"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Create new item"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + D"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Duplicate selected item"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Delete"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Delete selected item"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Enter"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Edit selected item"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>

						<Grid ColumnDefinitions="2*,3*">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="F2"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Edit selected item (alternative)"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- Ingredients View Shortcuts -->
				<Border Background="White"
				        CornerRadius="8"
				        Padding="16"
				        BoxShadow="0 2 8 0 #10000000">
					<StackPanel Spacing="12">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<TextBlock Text="ðŸ¥•"
							          FontSize="18"
							          VerticalAlignment="Center"/>
							<TextBlock Text="Ingredients View"
							          FontSize="16"
							          FontWeight="Bold"
							          Foreground="#2D2D2D"
							          VerticalAlignment="Center"/>
						</StackPanel>

						<Grid ColumnDefinitions="2*,3*" Margin="0,8,0,0">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + I"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Import ingredients from Excel"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- Recipes View Shortcuts -->
				<Border Background="White"
				        CornerRadius="8"
				        Padding="16"
				        BoxShadow="0 2 8 0 #10000000">
					<StackPanel Spacing="12">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<TextBlock Text="ðŸ“–"
							          FontSize="18"
							          VerticalAlignment="Center"/>
							<TextBlock Text="Recipes View"
							          FontSize="16"
							          FontWeight="Bold"
							          Foreground="#2D2D2D"
							          VerticalAlignment="Center"/>
						</StackPanel>

						<Grid ColumnDefinitions="2*,3*" Margin="0,8,0,0">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + P"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Print recipe card"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>
					</StackPanel>
				</Border>

				<!-- Entrees View Shortcuts -->
				<Border Background="White"
				        CornerRadius="8"
				        Padding="16"
				        BoxShadow="0 2 8 0 #10000000">
					<StackPanel Spacing="12">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<TextBlock Text="ðŸ½ï¸"
							          FontSize="18"
							          VerticalAlignment="Center"/>
							<TextBlock Text="Entrees View"
							          FontSize="16"
							          FontWeight="Bold"
							          Foreground="#2D2D2D"
							          VerticalAlignment="Center"/>
						</StackPanel>

						<Grid ColumnDefinitions="2*,3*" Margin="0,8,0,0">
							<Border Grid.Column="0"
							        Background="#F5F5F5"
							        CornerRadius="4"
							        Padding="8,4"
							        Margin="0,0,8,8">
								<TextBlock Text="Ctrl + P"
								          FontFamily="Consolas"
								          FontWeight="SemiBold"
								          Foreground="#7AB51D"/>
							</Border>
							<TextBlock Grid.Column="1"
							          Text="Print entree card"
							          VerticalAlignment="Center"
							          Foreground="#2D2D2D"/>
						</Grid>
					</StackPanel>
				</Border>

			</StackPanel>
		</ScrollViewer>

		<!-- Close Button -->
		<Button Grid.Row="2"
		        Content="Close"
		        Click="OnCloseClicked"
		        Background="#7AB51D"
		        Foreground="White"
		        Padding="24,10"
		        CornerRadius="4"
		        FontWeight="SemiBold"
		        HorizontalAlignment="Right"
		        Margin="0,16,0,0"/>

	</Grid>
</Window>
