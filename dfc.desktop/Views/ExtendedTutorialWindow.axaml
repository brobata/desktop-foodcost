<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dfc.Desktop.ViewModels"
        xmlns:controls="using:Dfc.Desktop.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Dfc.Desktop.Views.ExtendedTutorialWindow"
        x:DataType="vm:ExtendedTutorialViewModel"
        Title="Desktop Food Cost Tutorial"
        WindowState="Maximized"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        CanResize="False">

    <Design.DataContext>
        <vm:ExtendedTutorialViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="#7AB51D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#8BC933"/>
        </Style>
        <Style Selector="Button.nav-button:disabled">
            <Setter Property="Background" Value="#CCCCCC"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="Button.skip-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.skip-button:pointerover">
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
    </Window.Styles>

    <!-- Semi-transparent dark overlay -->
    <Panel>
        <!-- Dark background overlay -->
        <Border Background="#CC000000" ZIndex="0"/>

        <!-- Confetti overlay (hidden by default) -->
        <controls:ConfettiControl x:Name="ConfettiOverlay" ZIndex="999"/>

        <!-- Tutorial content card - Fixed size for consistent button positions -->
        <Border x:Name="TutorialCard"
                Background="White"
                CornerRadius="16"
                Width="900"
                Height="700"
                Padding="40"
                BoxShadow="0 10 40 5 #88000000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ZIndex="1">

            <Grid RowDefinitions="Auto,*,Auto">

                <!-- Header Section -->
                <StackPanel Grid.Row="0" Spacing="15" Margin="0,0,0,25">
                    <!-- Close button -->
                    <Button HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="5"
                            Cursor="Hand"
                            Command="{Binding CloseCommand}">
                        <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Width="20" Height="20" Foreground="#333333"/>
                    </Button>

                    <!-- Module info -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{Binding CurrentModule.Icon}"
                                   FontSize="32"
                                   VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentModule.Name}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#333333"/>
                            <TextBlock Text="{Binding ProgressText}"
                                       FontSize="14"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Progress bar -->
                    <ProgressBar Value="{Binding ProgressPercentage}"
                                 Maximum="100"
                                 Height="6"
                                 Foreground="#7AB51D"
                                 Background="#EEEEEE"
                                 CornerRadius="3"/>
                </StackPanel>

                <!-- Content Section -->
                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ContentPanel" Spacing="20">
                        <!-- Step title -->
                        <TextBlock Text="{Binding CurrentStep.Title}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#222222"
                                   TextWrapping="Wrap"/>

                        <!-- Step description -->
                        <TextBlock Text="{Binding CurrentStep.Description}"
                                   FontSize="16"
                                   LineHeight="24"
                                   Foreground="#444444"
                                   TextWrapping="Wrap"/>

                        <!-- Screenshot with annotations -->
                        <Border IsVisible="{Binding HasScreenshot}"
                                Background="#F5F5F5"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,10,0,0">
                            <Panel Height="300">
                                <Image x:Name="ScreenshotImage"
                                       Source="{Binding ScreenshotPath}"
                                       Stretch="Uniform"
                                       MaxHeight="300"/>

                                <!-- Annotations overlay -->
                                <controls:TutorialAnnotationControl
                                    IsVisible="{Binding HasAnnotations}"
                                    Annotations="{Binding CurrentStep.Annotations}"/>
                            </Panel>
                        </Border>

                        <!-- Keyboard shortcut -->
                        <Border IsVisible="{Binding HasKeyboardShortcut}"
                                Background="#F0F7FF"
                                BorderBrush="#7AB51D"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="15">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M20,17H4V10H20V17M12,6H4V9H12V6M20,6H13V9H20V6M20,4C21.11,4 22,4.89 22,6V17C22,18.11 21.11,19 20,19H4C2.89,19 2,18.11 2,17V6C2,4.89 2.89,4 4,4H20Z"
                                          Width="20" Height="20" Foreground="#7AB51D"/>
                                <StackPanel>
                                    <TextBlock Text="Keyboard Shortcut"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"/>
                                    <TextBlock Text="{Binding CurrentStep.KeyboardShortcut}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#7AB51D"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Pro tip -->
                        <Border IsVisible="{Binding HasProTip}"
                                Background="#FFF9E6"
                                BorderBrush="#FFD700"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="15">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M12,2L15.09,8.26L22,9.27L17,14.14L18.18,21.02L12,17.77L5.82,21.02L7,14.14L2,9.27L8.91,8.26L12,2Z"
                                          Width="20" Height="20" Foreground="#FFD700"/>
                                <StackPanel>
                                    <TextBlock Text="Pro Tip"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#666666"/>
                                    <TextBlock Text="{Binding CurrentStep.ProTip}"
                                               FontSize="14"
                                               Foreground="#444444"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer Navigation -->
                <Grid Grid.Row="2"
                      ColumnDefinitions="Auto,*,Auto,Auto"
                      Margin="0,25,0,0">

                    <!-- Back button -->
                    <Button Grid.Column="0"
                            Content="â† Back"
                            Classes="nav-button"
                            Command="{Binding BackCommand}"
                            IsEnabled="{Binding CanGoBack}"/>

                    <!-- Skip tutorial -->
                    <Button Grid.Column="2"
                            Content="Skip Tutorial"
                            Classes="skip-button"
                            Command="{Binding SkipCommand}"
                            Margin="0,0,10,0"/>

                    <!-- Next/Finish button -->
                    <Button Grid.Column="3"
                            Content="{Binding NextButtonText}"
                            Classes="nav-button"
                            Command="{Binding NextCommand}"/>
                </Grid>
            </Grid>
        </Border>
    </Panel>
</Window>
